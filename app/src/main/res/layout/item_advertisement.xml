<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_outl_grad_pd_p"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/ia_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÍTULO"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/ia_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:minHeight="100dp"
            android:text="@string/permission_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ia_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:text="Rivera Ambrosio Jean Diego"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ia_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:text="26/10/2019"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>