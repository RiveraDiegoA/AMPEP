<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/al_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grad_v"
    android:orientation="vertical"
    tools:context=".Activities.LoginActivity">

    <LinearLayout
        android:id="@+id/al_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_logo_ampep" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/al_layout_1_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingHorizontal="50dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_logo_ampep" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/al_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/al_edt_user"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:drawableRight="@drawable/ic_account_circle_w"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:elevation="4dp"
                        android:hint="Usuario"
                        android:minWidth="250dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/al_edt_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:elevation="4dp"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:minWidth="250dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/al_btn_usr"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/btn_circle_outl_grad_p_pd"
                            android:elevation="4dp"
                            android:src="@drawable/ic_account_circle_w"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:tint="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USR"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/al_btn_usr_2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/btn_circle_outl_grad_p_pd"
                            android:elevation="4dp"
                            android:src="@drawable/ic_account_circle_w"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:tint="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USR2"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/al_btn_tch"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_margin="7dp"
                            android:background="@drawable/btn_circle_outl_grad_p_pd"
                            android:elevation="4dp"
                            android:src="@drawable/ic_account_circle_w"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:tint="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TCH"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/al_btn_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/btn_grad_pd_p"
                    android:elevation="4dp"
                    android:minWidth="200dp"
                    android:text="INICIAR SESIÓN"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>